<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "#", id: "logo" do %>
      <%= t ".name" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to root_path do %>
            <%= t "static_pages.home.home_title" %>
          <% end %>
        </li>
        <li>
          <%= link_to help_path do %>
            <%= t "static_pages.help.help_title" %>
          <% end %>
        </li>
        <% if logged_in? %>
          <li><%= link_to t(".user"), users_path %></li>
          <li class="dropdown">
            <%= link_to raw(t(".account") + "<b class='caret'></b>"), "#", { "data-toggle" => "dropdown" } %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
        <li><%= link_to t(".login"), login_path %></li>
        <% end %>
        <li class="dropdown">
          <%= link_to raw(t(".language") + "<b class='caret'></b>"), "#", { "data-toggle" => "dropdown" } %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to locale:"en" do %>
                <%= t "english" %>
              <% end %>
            </li>
            <li>
              <%= link_to locale:"vi"  do %>
                <%= t "vietnam" %>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
